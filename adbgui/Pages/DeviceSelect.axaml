<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i18n="clr-namespace:adbgui.Localizer"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="adbgui.Pages.DeviceSelect">
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center"
          MinHeight="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{i18n:Localize SelectDevice}"
                   HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Content="{i18n:Localize RefreshDeviceList}"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Classes="Accent"
                Click="OnRefreshClick"/>

        <ListBox Name="List" Grid.Row="2"
                 Margin="0,15,0,15"
                 SelectionChanged="OnListSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Id}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="3" Name="OkBtn"
                HorizontalAlignment="Stretch"
                Click="OnOkClick">
            <TextBlock Text="{i18n:Localize Ok}"
                       HorizontalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
