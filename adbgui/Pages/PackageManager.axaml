<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             xmlns:i18n="clr-namespace:adbgui.Localizer"
             xmlns:converters="clr-namespace:adbgui.Converters"
             xmlns:controls="clr-namespace:adbgui.Controls"
             xmlns:models="clr-namespace:adbgui.Adb.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="adbgui.Pages.PackageManager">
    <UserControl.Resources>
        <converters:PackageIconConverter x:Key="PackageIconConverter"/>
        <converters:PackageNameConverter x:Key="PackageNameConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Name="SearchText" KeyDown="OnSearchTextKeyDown"
                     Watermark="{i18n:Localize Search}"/>
            <Button Grid.Column="1" MinHeight="32" Name="SearchBtn" Click="OnSearchClick">
                <i:Icon Value="fas fa-search" />
            </Button>

            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ToggleSwitch Grid.Column="0" Name="ChkShowSystem" Content="{i18n:Localize ShowSystem}" IsChecked="True"
                              IsCheckedChanged="OnTypeFilterChanged"/>
                <ToggleSwitch Grid.Column="1" Name="ChkShowDisabled" Content="{i18n:Localize ShowDisabled}" IsChecked="True"
                              IsCheckedChanged="OnTypeFilterChanged"/>
                <ToggleSwitch Grid.Column="2" Name="ChkShowThirdParty" Content="{i18n:Localize ShowThirdParty}" IsChecked="True"
                              IsCheckedChanged="OnTypeFilterChanged"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Stretch"
                    Click="OnInstallBtnClick">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <i:Icon Value="fa fa-upload" Margin="0,0,10,0" />
                    <TextBlock HorizontalAlignment="Center" Text="{i18n:Localize InstallAPK}" />
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch"
                    Margin="0,5,5,0"
                    Name="DownloadBtn"
                    IsEnabled="False"
                    Click="OnDownloadClick">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <i:Icon Value="fas fa-download" Margin="0,0,10,0" />
                    <TextBlock HorizontalAlignment="Center" Text="{i18n:Localize Download}" />
                </StackPanel>
            </Button>
            <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"
                    Margin="5,5,5,0"
                    Classes="Warning"
                    Name="DisableBtn"
                    IsEnabled="False"
                    Click="OnDisableClick">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <i:Icon Value="fas fa-ban" Margin="0,0,10,0" />
                    <TextBlock HorizontalAlignment="Center" Text="{i18n:Localize Disable}" />
                </StackPanel>
            </Button>
            <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch"
                    Margin="5,5,5,0"
                    Name="EnableBtn"
                    IsEnabled="False"
                    Click="OnEnableClick">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <i:Icon Value="fas fa-check" Margin="0,0,10,0" />
                    <TextBlock HorizontalAlignment="Center" Text="{i18n:Localize Enable}" />
                </StackPanel>
            </Button>
            <Button Grid.Row="1" Grid.Column="3" HorizontalAlignment="Stretch"
                    Classes="Danger"
                    Margin="5,5,0,0"
                    Name="UninstallBtn"
                    IsEnabled="False"
                    Click="OnUninstallBtnClick">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <i:Icon Value="fa fa-trash" Margin="0,0,10,0" />
                    <TextBlock HorizontalAlignment="Center" Text="{i18n:Localize Uninstall}" />
                </StackPanel>
            </Button>
        </Grid>

        <ListBox Name="List"
                 Grid.Row="2"
                 SelectionMode="Multiple"
                 SelectionChanged="OnListSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:Package">
                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <i:Icon Value="{Binding Converter={StaticResource PackageIconConverter}}" Margin="0,0,10,0"
                                FontSize="20"/>

                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Converter={StaticResource PackageNameConverter}}" TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding Type}" FontWeight="ExtraLight" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <controls:Spinner Grid.Row="2" Name="Spinner"
                          IsVisible="False"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="3" Name="TxtStatus" Margin="0,5,0,0" />
    </Grid>
</UserControl>
